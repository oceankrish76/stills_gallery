<p id="notice"><%= notice %></p>

<h1>Album Types</h1>

<table>
  <thead>
    <tr>
      <th>Albumname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @album_types.each do |album_type| %>
      <tr>
        <td><%= album_type.albumname %></td>
        <td><%= link_to 'Show', album_type %></td>
        <td><%= link_to 'Edit', edit_album_type_path(album_type) %></td>
        <td><%= link_to 'Destroy', album_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

