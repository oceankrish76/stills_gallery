<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :fname %>
    <%= form.text_field :fname, :required => true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :lname %>
    <%= form.text_field :lname, :required => true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :location %>
    <%= form.text_field :location, class: "form-control"  %>
  </div>

  <div class="field form-group">
    <%= form.label :password %>
    <%= form.password_field :password, :required => true, class: "form-control" %>
  </div>
  
  <div class="field form-group">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, :required => true, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
