
<%= form_with(model: photo, local: true) do |form| %>
  <% if photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
        <% photo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "control-label" %>
    <%= form.text_field :title, class: "form-control", required: 'required' %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "control-label" %>
    <%= form.text_area :description, class: "form-control", required: 'required' %>
  </div>

<%
=begin%>
   <div class="form-group">
    <%= form.label :image_file_name, class: "control-label" %>
    <%= form.text_field :image_file_name, class: "form-control", required: 'required' %>
  </div>

  <div class="form-group">
    <%= form.label :image_content_type, class: "control-label" %>
    <%= form.text_field :image_content_type, class: "form-control", required: 'required' %>
  </div>

  <div class="form-group">
    <%= form.label :image_file_size, class: "control-label" %>
    <%= form.number_field :image_file_size, class: "form-control", required: 'required' %>
  </div>

  <div class="form-group">
    <%= form.label :author, class: "control-label" %>
    <%= form.text_field :author, class: "form-control", required: 'required' %>
  </div> 
<%
=end%>

  <div class="control-group">
    <%= form.label "Choose Album", class:"control-label" %>
    <div class="controls">
    <%#= @album_types %>
    <% @album_types.each do |album_type| %>
      <%#= form.label :albumname %>
      <%#= album_type.albumname %>
      
      <%#= debug album_type %>
      <%#= album_type.to_yaml %>
      <%#= album_type.inspect %>
      <%#= album_type.all %>
      <%#= form.select(:album_type_id, options_for_select(album_type.all.collect{|c | [c.albumname, c.id]}, { include_blank: false, selected: form.object.album_type_id })) %>
      <%= form.select :album_type, options_for_select(album_type.all.collect{|c | [c.albumname, c.id]}) %>

    <% end %>
    </div>
  </div>

  <%= form.fields_for :photo_attachments do |p| %>
     <div class="field">
       <%= p.label :avatar %><br>
       <%= p.file_field :avatar, multiple: true, name: "photo_attachments[avatar][]", required: 'required' %>
     </div>
   <% end %>

  <div class="Action">
    <%= form.submit %>
  </div>
<% end %>